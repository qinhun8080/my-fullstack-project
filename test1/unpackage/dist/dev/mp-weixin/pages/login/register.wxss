}
.register-card.data-v-838b72c9 {
  background: rgba(255, 255, 255, 0.98);
  width: 100%;
  max-width: 680rpx;
  padding: 50rpx 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.05);
}
.header.data-v-838b72c9 {
  margin-bottom: 40rpx;
