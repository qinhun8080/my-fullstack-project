  margin-bottom: 30rpx;
}
.label.data-v-838b72c9 {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #606266;
}
.required.data-v-838b72c9 {
  color: #ff4d4f;
  margin-left: 4rpx;
}

/* --- 增强版输入框容器 --- */
.input-wrapper.data-v-838b72c9 {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  /* 浅灰蓝背景 */
  border: 2rpx solid #e4e7ed;
  /* 浅边框 */
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 90rpx;
  /* 注册页输入项多，高度稍微紧凑一点 */
  transition: all 0.3s;
}
.input-wrapper.data-v-838b72c9:focus-within {
  background: #fff;
  border-color: #1890FF;
  box-shadow: 0 0 0 6rpx rgba(24, 144, 255, 0.1);
}
.input-field.data-v-838b72c9 {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.placeholder-style.data-v-838b72c9 {
  color: #c0c4cc;
}
.picker-view.empty.data-v-838b72c9 {
  color: #c0c4cc;
}

/* Picker空值颜色 */
.register-btn.data-v-838b72c9 {
  background: linear-gradient(135deg, #3B9DFF 0%, #1890FF 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 50rpx;
  height: 96rpx;
  line-height: 96rpx;
  box-shadow: 0 10rpx 20rpx rgba(24, 144, 255, 0.3);
  border: none;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}
.register-btn.data-v-838b72c9:active {
  opacity: 0.9;
  transform: scale(0.99);
}
