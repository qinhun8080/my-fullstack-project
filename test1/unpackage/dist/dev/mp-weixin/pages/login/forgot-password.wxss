.container.data-v-962ceba2 {
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f0f2f5;
  position: relative;
  padding: 20rpx;
}
.login-card.data-v-962ceba2 {
  background: #ffffff;
  width: 100%;
  max-width: 650rpx;
  padding: 60rpx 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.05);
  z-index: 1;
}
.header.data-v-962ceba2 {
  margin-bottom: 40rpx;
  text-align: center;
}
.title.data-v-962ceba2 {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}
.input-group.data-v-962ceba2 {
  margin-bottom: 30rpx;
}
.label.data-v-962ceba2 {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #606266;
}

/* --- 核心修改：增强输入框样式 --- */
.input-wrapper.data-v-962ceba2 {
  display: flex;
  align-items: center;
  /* 背景色加深一点，与纯白卡片区分 */
  background: #f5f7fa;
  /* 增加极细边框 */
  border: 2rpx solid #e4e7ed;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 96rpx;
  transition: all 0.3s;
}

/* 聚焦时的状态：变白、蓝边框、微发光 */
.input-wrapper.data-v-962ceba2:focus-within {
  background: #ffffff;
  border-color: #1890FF;
  box-shadow: 0 0 0 6rpx rgba(24, 144, 255, 0.1);
}
.input-field.data-v-962ceba2 {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
}
.placeholder-style.data-v-962ceba2 {
  color: #c0c4cc;
}
.password-toggle.data-v-962ceba2 {
  padding: 10rpx;
  display: flex;
  align-items: center;
}

/* 按钮样式微调 */
.login-btn.data-v-962ceba2 {
  background: linear-gradient(135deg, #3B9DFF 0%, #1890FF 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.25);
  border: none;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}
.login-btn.data-v-962ceba2:active {
  opacity: 0.9;
  transform: scale(0.99);
}
.footer-links.data-v-962ceba2 {
  display: flex;
  justify-content: center;
}
.footer-link.data-v-962ceba2 {
  font-size: 28rpx;
  color: #1890FF;
  font-weight: 500;
}