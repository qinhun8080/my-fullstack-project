.container.data-v-e4e4508d {
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f0f2f5;
  position: relative;
  overflow: hidden;
}
.login-card.data-v-e4e4508d {
  background: rgba(255, 255, 255, 0.98);
  width: 90%;
  max-width: 680rpx;
  padding: 60rpx 50rpx;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.06);
  z-index: 1;
}
.header.data-v-e4e4508d {
  margin-bottom: 50rpx;
  text-align: left;
}
.title.data-v-e4e4508d {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.input-group.data-v-e4e4508d {
  margin-bottom: 40rpx;
}
.label.data-v-e4e4508d {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #606266;
}

/* --- 优化后的输入框 --- */
.input-wrapper.data-v-e4e4508d {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  /* 明显但不突兀的背景 */
  border: 2rpx solid #e4e7ed;
  /* 柔和边框 */
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 100rpx;
  transition: all 0.3s;
}
.input-wrapper.data-v-e4e4508d:focus-within {
  background: #fff;
  border-color: #1890FF;
  box-shadow: 0 0 0 6rpx rgba(24, 144, 255, 0.1);
}
.input-field.data-v-e4e4508d {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
}
.placeholder-style.data-v-e4e4508d {
  color: #c0c4cc;
}
.options-grid.data-v-e4e4508d {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}
.checkbox-label.data-v-e4e4508d {
  display: flex;
  align-items: center;
}
.checkbox-text.data-v-e4e4508d {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}
.forgot-link text.data-v-e4e4508d {
  font-size: 26rpx;
  color: #1890FF;
}
.login-btn.data-v-e4e4508d {
  background: linear-gradient(135deg, #3B9DFF 0%, #1890FF 100%);
  color: white;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  box-shadow: 0 10rpx 20rpx rgba(24, 144, 255, 0.3);
  border: none;
  transition: transform 0.1s;
}
.login-btn.data-v-e4e4508d:active {
  transform: scale(0.98);
  opacity: 0.9;
}
.footer-links.data-v-e4e4508d {
  margin-top: 40rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  gap: 30rpx;
}
.footer-link.data-v-e4e4508d {
  font-size: 28rpx;
  color: #1890FF;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 6rpx;
}